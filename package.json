{
  "name": "ai-career-accelerator-platform",
  "private": true,
  "version": "1.0.0",
  "description": "AI Career Accelerator Platform - full-stack web application with React, Node.js, and MongoDB.",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "cd backend && npm run dev",
    "dev:client": "cd frontend && npm run dev",
    "install:all": "npm-run-all install:server install:client",
    "install:server": "cd backend && npm install",
    "install:client": "cd frontend && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
